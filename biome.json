{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": ["build/**", ".wrangler/**", "code.example.tsx", "themeValidatorAjv.mjs"]
  },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "bracketSameLine": false,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  }
}
