{
  "name": "zed-themes",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "build": "remix vite:build",
    "build:validator": "npx -f tsx ./dev/buildValidator.ts",
    "build:schema": "pnpm json2ts ./dev/themeFamily.json ./app/themeFamily.d.ts --unknownAny=false --style.singleQuote --additionalProperties=false",
    "build:db": "wrangler d1 execute zed_themes --local --file=./drizzle/0000_lazy_king_cobra.sql",
    "dev": "remix vite:dev",
    "dev:wrangler": "wrangler pages dev ./build/client",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply zed_themes --local",
    "db:migrate:prod": "wrangler d1 migrations apply zed_themes --remote",
    "db:migrate:preview": "wrangler d1 migrations apply --env preview zed_themes_preview --remote",
    "db:studio:local": "drizzle-kit studio",
    "db:studio:preview": "export $(xargs < .env.drizzle) && DB_ID=d302f4f5-e52a-4192-869d-8bd7a746135f drizzle-kit studio",
    "db:studio:prod": "export $(xargs < .env.drizzle) && DB_ID=28315368-145a-4500-a29a-5e5e3afb344b drizzle-kit studio",
    "fmt": "biome format --write",
    "test:lint": "biome check",
    "test:tsc": "wrangler types && tsc",
    "test:e2e": "pnpm exec playwright test",
    "sync:themes": "npx tsx ./dev/syncZedThemes.ts",
    "sync:themes:local": "npx tsx ./dev/syncZedThemes.ts --local",
    "ui": "pnpm dlx shadcn-ui@latest"
  },
  "dependencies": {
    "@clerk/remix": "^4.2.9",
    "@clerk/themes": "^2.1.16",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@remix-run/cloudflare": "^2.10.2",
    "@remix-run/cloudflare-pages": "^2.10.2",
    "@remix-run/react": "^2.10.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.32.2",
    "embla-carousel-react": "^8.1.6",
    "immutability-helper": "^3.1.1",
    "isbot": "^5.1.12",
    "lucide-react": "^0.408.0",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.3.1",
    "react-file-drop": "^3.1.6",
    "react-icons": "^5.2.1",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@cloudflare/workers-types": "^4.20240712.0",
    "@playwright/test": "^1.45.1",
    "@remix-run/dev": "^2.10.2",
    "@remix-run/node": "^2.10.2",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.19",
    "better-sqlite3": "^11.1.2",
    "cloudflare-workers-kv-viewer": "^1.0.3",
    "drizzle-kit": "^0.23.2",
    "esbuild": "^0.23.0",
    "json-schema-to-typescript": "^14.1.0",
    "lefthook": "^1.7.2",
    "miniflare": "^3.20240701.0",
    "postcss": "^8.4.39",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "wrangler": "^3.69.1",
    "zx": "^8.1.4"
  },
  "resolutions": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
